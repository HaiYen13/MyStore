<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_weight="0.17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_back_imv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/ic_back" />

        <TextView
            android:id="@+id/headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="106dp"
            android:gravity="top"
            android:text="@string/forgot_password"
            android:textAppearance="@style/headline" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_weight="0.13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/text_message"
            android:layout_marginBottom="25dp"
            android:text="@string/forgot_password_tv" />

        <EditText
            android:id="@+id/forgot_email_edt"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Email"
            style="@style/text_textbox"
            android:padding="20dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/black"
            app:hintTextColor="@color/black"
            android:textColorHint="@color/gray"
            android:background="@drawable/textbox"
            />

        <TextView
            android:id="@+id/not_valid_email_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/not_valid_email_address"
            style="@style/warning"
            android:visibility="gone"
            />


    </LinearLayout>


    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:text="@string/forgot_password_send_btn"
        android:textColor="@color/white"
        android:textAppearance="@style/metropolis"
        android:lineSpacingExtra="6sp"
        android:background="@drawable/btn_buton"/>




</LinearLayout>